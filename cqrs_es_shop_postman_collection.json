  },
  "item": [
    {
      "name": "Commands",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/commands/products",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "commands",
                "products"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"SKU-2001\",\n  \"name\": \"Pro Widget\",\n  \"price_cents\": 2499,\n  \"description\": \"Latest test product\"\n}"
            },
            "description": "Creates a product and stores a ProductCreated event."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Save product_id into environment for later requests",
                  "pm.test('Status code is 201', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data.product_id) {",
                  "    pm.environment.set('product_id', data.product_id);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Adjust Inventory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/commands/inventory/adjust",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "commands",
                "inventory",
                "adjust"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": \"{{product_id}}\",\n  \"delta\": 25\n}"
            },
            "description": "Adjust inventory for the given product_id by delta (+/-)."
          }
        },
        {
          "name": "Create Order",
